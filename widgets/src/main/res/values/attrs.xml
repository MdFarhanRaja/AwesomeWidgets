<?xml version="1.0" encoding="utf-8"?>
<resources>
   <declare-styleable name="AwesomeTextView">
       <attr name="atv_backgroundColor" format="color"/>
       <attr name="atv_cornerRadius" format="integer"/>
       <attr name="atv_borderColor" format="color"/>
       <attr name="atv_borderWidth" format="integer"/>
       <attr name="atv_borderEnable" format="boolean"/>
       <attr name="atv_fontPath" format="string"/>
   </declare-styleable>

    <declare-styleable name="AwesomeEditText">
        <attr name="aet_backgroundColor" format="color"/>
        <attr name="aet_cornerRadius" format="integer"/>
        <attr name="aet_borderColor" format="color"/>
        <attr name="aet_borderWidth" format="integer"/>
        <attr name="aet_borderEnable" format="boolean"/>
        <attr name="aet_fontPath" format="string"/>
    </declare-styleable>

    <declare-styleable name="AwesomeRelativeLayout">
        <attr name="arl_backgroundColor" format="color"/>
        <attr name="arl_cornerRadius" format="integer"/>
        <attr name="arl_borderColor" format="color"/>
        <attr name="arl_borderWidth" format="integer"/>
        <attr name="arl_borderEnable" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="AwesomeRippleView">
        <attr name="arv_alpha" format="integer" />
        <attr name="arv_framerate" format="integer"/>
        <attr name="arv_rippleDuration" format="integer"/>
        <attr name="arv_zoomDuration" format="integer" />
        <attr name="arv_color" format="color" />
        <attr name="arv_centered" format="boolean" />
        <attr name="arv_type" format="enum">
            <enum name="simpleRipple" value="0"/>
            <enum name="doubleRipple" value="1"/>
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="arv_ripplePadding" format="dimension" />
        <attr name="arv_zoom" format="boolean" />
        <attr name="arv_zoomScale" format="float" />

    </declare-styleable>

</resources>